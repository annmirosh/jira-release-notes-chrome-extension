{
  "name": "JIRA's Release Notes formatter",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This is a small extension for Chrome that will format standard output of release notes in JIRA",
  "browser_action": {
    "default_title": "Data getter for Synqq",
    "default_icon": "images/icon.png"
  },

  "icons": {
    "128": "images/icon.png",
    "16": "images/icon.png",
    "48": "images/icon.png"
  },

  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "activeTab",
    "background"
  ],

  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "src/content.js"
      ],
      "all_frames": true
    }
  ]
}
